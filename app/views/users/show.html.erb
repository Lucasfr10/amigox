<div class="row col-md-12 text-center header-bg">
  <div class="row header-height">
    <div class="col-md-8">
      <h3>
        <%= @user.name %>
        <br>
        <small><%= @user.email %></small>
      </h3>

    </div>
    <div class="col-md-4">
      <br>
      <%= link_to "Criar grupo", new_group_path, class: "btn btn-info btn-lg" %>
      <%= link_to "Sair", "/logout", class: "btn btn-danger btn-lg" %>
    </div>
  </div>

  <div class="row content-height">
    <div class="col-md-6 max_height">
      <h4>
        Grupos em que vocÃª participa: <span class="badge"><%= @user.groups.count %></span>
      </h4>

      <div class="show_lists">
        <% @user.groups.each do |group| %>
          <%= render :partial => 'group', :locals => {:group => group} %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 max_height">
      <h4>
        Eventos mais recentes: <span class="badge"><%= @user.events.count %></span>
      </h4>

      <div class="show_lists">
        <% @user.events.each do |event| %>
          <%= render :partial => 'event', :locals => {:event => event, :pair => @user.pair(event)} %>
        <% end %>
      </div>

    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function () {
    $("#my_profile").addClass("active");
  });
</script>
