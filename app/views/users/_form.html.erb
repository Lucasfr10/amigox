<div class="row vertical-center">
  <div class="col-md-4 col-md-offset-4 login-bg">
    <h3><%= action %></h3>

    <%= simple_form_for @user, html: { class: "col-md-12"} do |f| %>
      <div class="row">
        <%= f.error_notification %>
      </div>

      <div class="row">
        <%= f.input :name, label: "Nome" %>
      </div>

      <div class="row">
        <%= f.input :email, label: "Email" %>
      </div>

      <div class="row">
        <%= f.input :password, label: "Senha" %>
      </div>

      <br>

      <div class="row">
        <div class="btn-group btn-group-lg col-md-12">
          <%= f.button :submit, "Salvar", :class => 'col-md-12' %>
        </div>

      </div>
      <br>

      <div class="row">
        <%= link_to "JÃ¡ possui uma conta?", "/login", :class => "pull-right" %>
      </div>
    <% end %>
  </div>
</div>
